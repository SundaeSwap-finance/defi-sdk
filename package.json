{
  "private": true,
  "name": "defi-sdk",
  "description": "",
  "author": {
    "name": "SundaeSwap Labs, Inc.",
    "url": "https://www.sundaeswap.finance/"
  },
  "bugs": {
    "url": "https://github.com/SundaeSwap-finance/defi-sdk/issues"
  },
  "homepage": "https://github.com/SundaeSwap-finance/defi-sdk#readme",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lint --fix"
  },
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "lint:fix": "yarn lint --fix",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna run clean",
    "build": "lerna run build --scope '@sundae/*'",
    "test": "lerna run test --stream --scope '@sundae/*'",
    "bump": "lerna version patch --no-git-tag-version --yes",
    "preinstall": "node tools/preinstall.ts && aws codeartifact login --tool npm --repository ui --domain sundae --domain-owner 320450105600 --namespace @sundae",
    "prepare": "husky install",
    "version:ci": "lerna version --conventional-commits --create-release github -y",
    "publish:ci": "lerna publish from-package -y",
    "release": "yarn build && lerna publish from-package -y",
    "canary": "lerna publish from-package -y --canary",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@sundae/eslint-config": "^1.6.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.19.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lerna": "^5.1.6",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^15.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  }
}
