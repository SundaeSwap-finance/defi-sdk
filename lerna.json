{
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "npmClient": "yarn",
  "ignoreChanges": [
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/*.test.js",
    "**/*.md"
  ],
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "version": "0.5.5"
}
