{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "useWorkspaces": false,
  "npmClient": "yarn",
  "ignoreChanges": [
    "**/__tests__/**",
    "**/__fixtures__/**",
    "**/*.test.js",
    "**/*.md"
  ],
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "private": false
    }
  },
  "version": "independent",
  "useNx": false
}
