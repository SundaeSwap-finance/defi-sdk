{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "ES2020",
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "@sundae/*": [
        "packages/*/src"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
